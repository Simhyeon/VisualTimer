<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sectorRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <com.example.myapplication.SectorProgressViewAnti
        android:id="@+id/sector"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:bgColor="@color/colorBackground"
        app:fgColor="@color/colorYellow"
        app:percent="0"
        app:startAngle="0"/>

    <com.timqi.sectorprogressview.ColorfulRingProgressView
        android:id="@+id/background"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        app:fgColorEnd="@color/colorYellow"
        app:fgColorStart="@color/colorYellow"
        app:percent="100"
        app:startAngle="0"
        app:strokeWidth="5dp"   >

    </com.timqi.sectorprogressview.ColorfulRingProgressView>


    <TextView
        android:id="@+id/sectorTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="180dp"
        android:textSize="50sp"
        android:textColor="@color/colorYellow"
        android:text="00:00:00" />

</RelativeLayout>